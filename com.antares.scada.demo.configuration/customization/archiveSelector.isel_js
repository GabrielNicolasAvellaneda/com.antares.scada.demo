function select () {
	if ( request.isComponentClass ( "GlobalizeComponent" ) ) {
		return false;
	}
	if ( request.isComponentClass ( "PingCheck" ) ) {
		return true;
	}
	
	if ( request.isLocalTags ( [ "LUX", "V" ] ) ) {
		return true;
	}
	
	//return false;
	
	return true;	// Always persist.
}

select (); // use return value